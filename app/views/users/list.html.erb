<div class="box wide">
  <p><strong><%= t('views.users.list.users') %> (<%= @user_count %>)</strong></p>

  <ul class="user_tree">
  <% @users.each do |user| %>
    <li>
      <a href="/u/<%= user.username %>"
        <% if !user.is_active? %>
          class="inactive_user"
        <% elsif user.is_new? %>
          class="new_user"
        <% end %>
        ><%= user.username %></a>&nbsp;(<%= user.karma %>)
      <% if user.is_admin? %>
        (<%= t('views.users.list.admin') %>)
      <% elsif user.is_moderator? %>
        (<%= t('views.users.list.mod') %>)
      <% end %>
    </li>
  <% end %>
  </ul>
</div>
